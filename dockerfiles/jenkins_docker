FROM jenkins:latest
USER root

ENV JENKINS_HOME /var/lib/jenkins

RUN apt-get update && apt-get install -y lxc && rm -rf /var/lib/apt/lists/*

ARG DOCKER_GROUP_ID
RUN groupadd -g ${DOCKER_GROUP_ID} docker && usermod -a -G docker jenkins

RUN curl -L https://github.com/docker/compose/releases/download/1.5.2/docker-compose-`uname -s`-`uname -m` > /usr/local/bin/docker-compose && chmod +x /usr/local/bin/docker-compose

USER jenkins